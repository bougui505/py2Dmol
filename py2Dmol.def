Bootstrap: docker
From: python:3-slim

%post
    # Install system dependencies
    apt-get update && apt-get install -y \
        git \
        wget \
        && rm -rf /var/lib/apt/lists/*

    # Install py2Dmol from GitHub
    cd /opt
    git clone https://github.com/bougui505/py2Dmol.git
    cd py2Dmol
    pip install -e .

%environment
    export PYTHONPATH="/opt/py2Dmol:$PYTHONPATH"

%runscript
    exec python3 "$@"
